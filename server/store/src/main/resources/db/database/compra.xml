<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="COMPRA" author="VITOR.MANOEL">
        <validCheckSum>ANY</validCheckSum>
        <preConditions onFail="MARK_RAN" onFailMessage="Compra jÃ¡ existe no Banco de Dados">
            <not>
                <tableExists tableName="COMPRA"/>
            </not>
        </preConditions>
        <createTable tableName="COMPRA">
            <column name="ID" type="bigserial" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="ID_CARRINHO" type="bigserial">
                <constraints nullable="false"/>
            </column>
            <column name="FRETE" type="NUMERIC(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="vitor.manoel" id="ADD_FK_CARRINHO">
        <addForeignKeyConstraint baseColumnNames="ID_CARRINHO"
                                 baseTableName="COMPRA"
                                 constraintName="ADD_FK_CARRINHO"
                                 referencedColumnNames="ID"
                                 referencedTableName="CARRINHO"/>
    </changeSet>

</databaseChangeLog>